<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="ru.mai.softwaredevelopment.client.controllers.AuthorizationController">
    <children>
        <TabPane prefHeight="400.0" prefWidth="600.0" side="LEFT" tabClosingPolicy="UNAVAILABLE"
                 AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="0.0">
            <tabs>
                <Tab text="Log in">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                            <padding>
                                <Insets bottom="125.0" left="100.0" right="100.0" top="125.0"/>
                            </padding>
                            <children>
                                <Label prefHeight="10.0" prefWidth="400.0" text="Username">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="usernameLogInField" prefHeight="30.0" prefWidth="400.0"/>
                                <Label prefHeight="10.0" prefWidth="400.0" text="Password">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="passwordLogInField" prefHeight="30.0" prefWidth="400.0"/>
                                <Button fx:id="logInButton" mnemonicParsing="false" onAction="#onLogInButtonAction"
                                        prefHeight="30.0" prefWidth="400.0" text="Log in">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Sign up">
                    <content>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                            <padding>
                                <Insets bottom="125.0" left="100.0" right="100.0" top="125.0"/>
                            </padding>
                            <children>
                                <Label prefHeight="10.0" prefWidth="400.0" text="Username">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="usernameSignUpField" prefHeight="30.0" prefWidth="400.0"/>
                                <Label prefHeight="10.0" prefWidth="400.0" text="Password">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                </Label>
                                <TextField fx:id="passwordSignUpField" prefHeight="30.0" prefWidth="400.0"/>
                                <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#onSignUpButtonAction"
                                        prefHeight="30.0" prefWidth="400.0" text="Sign up">
                                    <font>
                                        <Font name="Arial" size="14.0"/>
                                    </font>
                                </Button>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>